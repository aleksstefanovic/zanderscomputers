<h1>Items</h1>
 
<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Image</th>
    <th>Description</th>
    <th>Item Type</th>
    <th><th>
  </tr>
 
  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= image_tag (item.image), :class => "miniItemImage" %></td>
      <td><%= item.description %></td>
      <td><%= item.item_type %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
    </tr>
  <% end %>
</table>
