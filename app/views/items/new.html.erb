<%= form_for :item, url: items_path do |f| %>
  <p>
    <%= f.label "Name:" %><br>
    <%= f.text_field :name, :class => "form-control newText" %>
  </p>

  <p>
    <%= f.label "Image:" %><br>
    <%= f.text_field :image, :class => "form-control newText" %>
  </p>
 
  <p>
    <%= f.label "Description:" %><br>
    <%= f.text_area :description, :class => "form-control newDesc" %>
  </p>

  <p>
    <%= f.label "Item Type:" %><br>
    <%= f.collection_select :item_type, ItemType.all, :id, :name , {}, { :class => "form-control category" } %>
  </p>
 
  <p>
    <%= f.submit 'Submit', :class => "btn btn-default" %>
  </p>
<% end %>
