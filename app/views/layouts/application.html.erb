<!DOCTYPE html>
<html>
  <head>
    <title>Zanders Computers</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>

  <body>
    <ul class="nav">
        <li><a href="/">Home</a></li>
        <li class="dropdown">
            <a href="/items" class="dropbtn" >Items</a>
            <div class="dropdown-content">
                <a href="/items?selected_item_type=1">Motherboard</a>
                <a href="/items?selected_item_type=2">RAM</a>
                <a href="/items?selected_item_type=3">Processors</a>
                <a href="/items?selected_item_type=4">Graphics Cards</a>
                <a href="/items?selected_item_type=5">Power Supply</a>
                <a href="/items?selected_item_type=6">Chasis</a>
            </div>
        </li>

        <div class="signIn">
            <% if user_signed_in? %>
              Logged in as <strong><%= current_user.email %></strong>.
              <%= link_to 'Edit profile', edit_user_registration_path %> |
              <%= link_to 'My Builds', controller: 'builds' %> |
              <%= link_to "Logout", destroy_user_session_path, method: :delete %>
            <% else %>
              <%= link_to "Sign up", new_user_registration_path %> |
              <%= link_to "Login", new_user_session_path %>
            <% end %>
        </div>
    </ul>
    <%= form_tag(items_path, :method => "get", id: "search-form", :enforce_utf8 => false) do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Parts...", :class => 'form_control'  %>
        <%= select_tag(:selected_item_type, options_from_collection_for_select(ItemType.all, :id, :name))%>
        <%= submit_tag "Search", :name => nil, :class => "btn fa-input" %>
        <button type="button" class="btn btn-success">PRESS ME</button>
    <% end %>
    <%= yield %>
  </body>

</html>
